<p id="notice"><%= notice %></p>

<h1>Employee Reviews</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Review</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_reviews.each do |employee_review| %>
      <tr>
        <td><%= employee_review.user %></td>
        <td><%= employee_review.review %></td>
        <td><%= employee_review.rating %></td>
        <td><%= link_to 'Show', employee_review %></td>
        <td><%= link_to 'Edit', edit_employee_review_path(employee_review) %></td>
        <td><%= link_to 'Destroy', employee_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Employee Review', new_employee_review_path %>
