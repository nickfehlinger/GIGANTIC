<h1>Employers</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Contact person</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Pay rate</th>
      <th>Pay type</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employers.each do |employer| %>
      <tr>
        <td><%= employer.user %></td>
        <td><%= employer.name %></td>
        <td><%= employer.contact_person %></td>
        <td><%= employer.phone %></td>
        <td><%= employer.email %></td>
        <td><%= employer.pay_rate %></td>
        <td><%= employer.pay_type %></td>
        <td><%= employer.color %></td>
        <td><%= link_to 'Show', employer %></td>
        <td><%= link_to 'Edit', edit_employer_path(employer) %></td>
        <td><%= link_to 'Destroy', employer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

