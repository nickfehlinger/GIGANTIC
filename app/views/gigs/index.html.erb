<p id="notice"><%= notice %></p>

<h1>Gigs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Client</th>
      <th>Staff budget</th>
      <th>Start</th>
      <th>End</th>
      <th>Street address</th>
      <th>City</th>
      <th>State</th>
      <th>Description</th>
      <th>Invoice period</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gigs.each do |gig| %>
      <tr>
        <td><%= gig.name %></td>
        <td><%= gig.client %></td>
        <td><%= gig.staff_budget %></td>
        <td><%= gig.start %></td>
        <td><%= gig.end %></td>
        <td><%= gig.street_address %></td>
        <td><%= gig.city %></td>
        <td><%= gig.state %></td>
        <td><%= gig.description %></td>
        <td><%= gig.invoice_period %></td>
        <td><%= link_to 'Show', gig %></td>
        <td><%= link_to 'Edit', edit_gig_path(gig) %></td>
        <td><%= link_to 'Destroy', gig, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

