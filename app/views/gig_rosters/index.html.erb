<p id="notice"><%= notice %></p>

<h1>Gig Rosters</h1>

<table>
  <thead>
    <tr>
      <th>Gig</th>
      <th>Roster</th>
      <th>Uniform</th>
      <th>In time</th>
      <th>Out time</th>
      <th>Accepted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gig_rosters.each do |gig_roster| %>
      <tr>
        <td><%= gig_roster.gig %></td>
        <td><%= gig_roster.roster %></td>
        <td><%= gig_roster.uniform %></td>
        <td><%= gig_roster.in_time %></td>
        <td><%= gig_roster.out_time %></td>
        <td><%= gig_roster.accepted %></td>
        <td><%= link_to 'Show', gig_roster %></td>
        <td><%= link_to 'Edit', edit_gig_roster_path(gig_roster) %></td>
        <td><%= link_to 'Destroy', gig_roster, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

