<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :employer, prompt: "Employer", label: false %>
    <%= f.input :title, label: false, placeholder: 'title' %>
    <%= f.input :description, label: false, placeholder: 'description' %>
    <%= f.input :street_address, label: false, placeholder: 'address' %>
    <%= f.input :city, label: false, placeholder: 'city', wrapper_html: { style: "display: inline-block; width: 49%; left: 0; margin: 0; margin-right: 0 !important;"} %>
    <%= f.input :state, collection: us_states, prompt: "State", label: false, wrapper_html: { style: "display: inline-block; width: 49%; right: 0; margin: 0; margin-right: 0 !important;"} %>
    <%= f.input :uniform, label: false, placeholder: 'uniform' %>
    <%# f.input :start, label: false, class: :datetime %> 
    <%# f.input :end, label: false, class: :datetime %>
    <div class="container" id="datetimeinputs">
    <div class='col-md-6' id="datetimecols">
        <div class="form-group">
            <div class='input-group date' id='datetimepicker6'>
                <%= f.input :start, as: :string, class: 'form-control', placeholder: 'Start Date & Time' %>
                <!-- <input type='text' class="form-control" name="event[start]" placeholder="Start Date & Time" /> -->
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>
    </div>
    <div class='col-md-6' id="datetimecols">
        <div class="form-group">
            <div class='input-group date' id='datetimepicker7'>
                <%= f.input :end, as: :string, class: 'form-control', placeholder: 'End Date & Time' %>
                <!-- <input type='text' class="form-control" name="event[end]" placeholder="End Date & Time" /> -->
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        $('#datetimepicker6').datetimepicker({
          format: 'Y-MM-DD H:mm:ss'
        });
        $('#datetimepicker7').datetimepicker({
            useCurrent: false, //Important! See issue #1075
            format: 'Y-MM-DD H:mm:ss'
        });
        $("#datetimepicker6").on("dp.change", function (e) {
            $('#datetimepicker7').data("DateTimePicker").minDate(e.date);
        });
        $("#datetimepicker7").on("dp.change", function (e) {
            $('#datetimepicker6').data("DateTimePicker").maxDate(e.date);
        });
    });
</script>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
